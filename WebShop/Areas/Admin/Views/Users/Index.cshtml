@model IEnumerable<ApplicationUsers>

@{
    ViewBag.PageTitle = "UserMangment";
    ViewBag.CardTitle = "User List";
}
<div class="justify-content-center">
    <div class="row align-self-center">
<a href="/Identity/Account/Register" class="btn btn-success mb-3">Create</a>
</div>
<table id="productTable" class="table table-hover" width="100%">
      <thead>
         <tr>
            <td>Name</td>
            <td>Address</td>
            <td>Email</td>
            <td>PhoneNumber</td>
            <td>Action</td>
        </tr>
      </thead>
      <tbody>
        @foreach(var pro in Model)
        {
            <tr>
                <td>@pro.Name</td>
                <td>@pro.Address</td>
                <td>@pro.Email</td>
                <td>@pro.PhoneNumber</td>
                <td>
                    @if(pro.LockoutEnd == null || pro.LockoutEnd < DateTime.Now)
                    {
                        <a asp-action="LockUnLock" class="btn btn-success" asp-route-id = "@pro.Id">
                            <i class="fas fa-lock-open"></i>
                        </a>
                    }
                    else
                    {
                        <a asp-action="LockUnLock" class="btn btn-danger" asp-route-id="@pro.Id">
                            <i class="fas fa-lock"></i>
                        </a>
                    }

                    <a href="/Admin/Product/Delete/@pro.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
   </table>
   </div>
