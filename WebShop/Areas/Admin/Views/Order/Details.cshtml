@model DTOOrderDetailsSamary

<section class="bg-light my-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">           
                <div class="card shadow-0 border">
                    <form class="card-body" method="post">
                        <input hidden asp-for="@Model.dTOOrderHeaders.Id" />
                        <div class="d-flex justify-content-between">
                            <label class="mb-2"> Name</label>
                            <input class="mb-2   text-center" type="text" asp-for="@Model.dTOOrderHeaders.Name" />
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <label class="mb-2"> Address</label>
                            <input class="mb-2  text-center" type="text" asp-for="@Model.dTOOrderHeaders.Address "  />
                        </div>

                        <div class="d-flex justify-content-between">
                            <label class="mb-2"> City</label>
                            <input class="mb-2  text-center" type="text" asp-for="@Model.dTOOrderHeaders.City " />
                        </div>

                        <div class="d-flex justify-content-between">
                            <label class="mb-2"> Phone Number</label>
                            <input class="mb-2 text-center" type="text" asp-for="@Model.dTOOrderHeaders.PhoneNumber" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <label class="mb-2"> Order Date</label>
                            <input class="mb-2  text-center" type="text" asp-for="@Model.dTOOrderHeaders.OrderDate" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <label class="mb-2"> Order Status</label>
                            <input class="mb-2  text-center" type="text" asp-for="@Model.dTOOrderHeaders.OrderStatus" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <label class="mb-2"> Payment</label>
                            <input class="mb-2  text-center" type="text" asp-for="@Model.dTOOrderHeaders.PaymentStatus" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <label class="mb-2"> Tracking Number</label>
                            <input class="mb-2  text-center" type="text" asp-for="@Model.dTOOrderHeaders.TrackingNumber" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <label class="mb-2"> Carrier</label>
                            <input class="mb-2  text-center" type="text" asp-for="@Model.dTOOrderHeaders.Carrier">
                        </div>

                        <button style="width:100%" asp-action="Details" class="btn btn-success" type="submit"> UpdateOrder </button>
                        <a style="width:100%" href="/Admin/Order/Delete/@Model.dTOOrderHeaders.Id" class="btn btn-danger">Delete</a>
     
                    </form>
                </div>
            </div>
           
            <div class="col-lg-6 ">
                <div class="card border shadow-0">
                    <div class="m-4 d-flex flex-row flex-wrap justify-content-around ">
                        @foreach (var item in Model.dTOOrderDetails)
                        {
                            @* <div class="row gy-3 mb-4">
                                <div class="col-lg-5">
                                    <div class="me-lg-5">
                                        <div class="d-flex">
                                            <div class="">
                                                <a class="nav-link">@item.Product.Name</a>
                                                <p class="text-muted">@item.Product.Description</p>
                                                <small class="text-muted text-nowrap"> $@item.Product.Price / per item </small>
                                                <p class="text-muted">@item.Count</p>
                                                <p class="text-center"> @item.total </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div> *@

                            <div class="card m-2" style="width:10rem">
                                <div class="card-body">
                                    <h5 class="card-title"> Product Name : @item.Product.Name</h5>
                                    <p class="card-text">Discription : @item.Product.Description</p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">Price : @item.Product.Price</li>
                                    <li class="list-group-item">Count : @item.Count</li>
                                    <li class="list-group-item">Total : @item.total</li>
                                </ul>
                               
                            </div>
                        }
                    </div>
                    <h6 class="text-center"> Total Order = @Model.Total.ToString("c")</h6>
                </div>
            </div>
  
        </div>
    </div>
</section>
