@model DTOShoppingCartSamary

<div class="container mt-5 p-3 rounded cart">
    <h2>Bill Information</h2>
    <div class="row d-flex flex-row justify-content-between">
        <form method="post">
            
            <div class="col-lg-6">
                    <div class="col-lg-12">
                       
                            <div class="form-group">
                                <label class="text-muted">Name</label>
                                <input class="form-control" value="@Model.DTOOrderHeader.Name"  />
                            </div>

                            <div class="form-group">
                                <label class="text-muted">Email</label>
                        <input class="form-control" value="@Model.DTOOrderHeader.ApplicationUsers.Email" />
                            </div>

                            <div class="form-group">
                                <label class="text-muted">Address</label>
                        <input class="form-control" value="@Model.DTOOrderHeader.Address" />
                            </div>

                    <div class="form-group">
                        <label class="text-muted">City</label>
                        <input class="form-control" value="@Model.DTOOrderHeader.City" />
                    </div>

                    <div class="form-group">
                        <label class="text-muted">Phone Number</label>
                        <input class="form-control" value="@Model.DTOOrderHeader.PhoneNumber" />
                    </div>
                       
                    </div>
                </div>
                      <div class="col-lg-6">
                            <div class="card-body">
                                 <div class="row">
                                    @foreach(var item in Model.dTOShoppingCarts)
                    {
                        <div class="col-lg-12 d-flex justify-content-between align-items-center">
                            <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                                <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                    <img src="~/@item.Product.Img"
                                         class="w-100" />
                                    <a href="#!">
                                        <div class="hover-overlay">
                                            <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 col-xl-6">
                                <h5>@item.Product.Name</h5>
                                <div class="d-flex flex-row">
                                    <div class="text-danger mb-1 me-2">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <span>@item.Product.Price</span>
                                </div>
                                
                                <p class="text-truncate mb-4 mb-md-0">
                                    @item.Product.Description
                                </p>
                            </div>
                        </div>
                    }
                    <div class="col-lg-12">
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                    Sub Total
                                    <span>$@Model.Total</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Shipping
                                    <span>Gratis</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                    <div>
                                        <strong>Total amount</strong>
                                        <strong>
                                            <p class="mb-0">(including VAT)</p>
                                        </strong>
                                    </div>
                                    <span><strong>$@Model.DTOOrderHeader.TotalPrice</strong></span>
                                </li>
                            </ul>    
                        </div>
                    </div>
                 </div>
            </div>
        </div>
            <button  type="submit" asp-action="Sammary" asp-controller="Cart" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block" >
                Go to checkout
            </button>
        </form>
    </div>
</div>

